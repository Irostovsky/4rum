<fieldset>
  <legend>New topic</legend>  
  <% form_for(@topic) do |f| %>
    <%= f.error_messages %>    
    <p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>  
  <%= link_to 'Back', topics_path %>  
</fieldset>